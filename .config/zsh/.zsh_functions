cat() {
    command batcat "$@"
}

cd() {
    builtin cd "$@" #TODO: builtin vs command?
    ls
}

# beware infinite loops when failing to use command foo in function foo()
# generate compile_commands.json for clangd
cmake() {
    command cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1 "$@" 
}

code() {
    command codium "$@"
}

# intellij idea
idea() {
    idea.sh "$@"
}

info() {
    command info --vi-keys --subnodes $@
}

# remove/install google play store
# can also do enable, disable. does this remove them from home screen?
# check connected: adb devices
# view packages: adb shell pm list packages
# TODO: generalize this to other apps? web browser, ...

removeGooglePlay() {
    adb shell pm uninstall -k --user 0 com.android.vending
}

# you may need to reset the app to factory settings and reboot before it can update or install anything
restoreGooglePlay() {
    adb shell pm install-existing com.android.vending
}

