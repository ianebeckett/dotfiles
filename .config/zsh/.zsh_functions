cat() {
    command batcat "$@"
}

cd() {
    builtin cd "$@" #TODO: builtin vs command?
    ls -lh --color=auto
}

# generate compile_commands.json for clangd
cmake() {
    command cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1 "$@" 
}

code() {
    command codium "$@"
}

# intellij idea
idea() {
    idea.sh "$@"
}

